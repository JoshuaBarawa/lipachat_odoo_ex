<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Flow Form View -->
        <record id="view_lipachat_flow_form" model="ir.ui.view">
            <field name="name">lipachat.flow.form</field>
            <field name="model">lipachat.flow</field>
            <field name="arch" type="xml">
                <form string="WhatsApp Flow">
                    <header>
                        <field name="status" widget="statusbar"/>
                        <button name="create_flow" string="Create Flow" type="object" class="btn-primary"/>
                        <button name="get_preview_url" string="Preview" type="object"/>
                        <button name="publish_flow" string="Publish" type="object"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="phone_number"/>
                                <field name="categories"/>
                            </group>
                            <group>
                                <field name="flow_id" readonly="1"/>
                                <field name="flow_file"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Flow Definition">
                                <field name="flow_json" widget="ace" options="{'mode': 'json'}" nolabel="1" 
                                       placeholder='{"version": "3.0", "screens": [...]}'/>
                            </page>
                            
                            <page string="Details">
                                <group>
                                    <field name="preview_url" widget="url" readonly="1"/>
                                    <field name="error_message" invisible="1" readonly="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Flow Tree View -->
        <record id="view_lipachat_flow_tree" model="ir.ui.view">
            <field name="name">lipachat.flow.tree</field>
            <field name="model">lipachat.flow</field>
            <field name="arch" type="xml">
                <tree string="WhatsApp Flows" decoration-success="status=='published'" decoration-info="status=='created'">
                    <field name="name"/>
                    <field name="categories"/>
                    <field name="phone_number"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <!-- Flow Action -->
        <record id="action_lipachat_flow" model="ir.actions.act_window">
            <field name="name">WhatsApp Flows</field>
            <field name="res_model">lipachat.flow</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first WhatsApp Flow
                </p>
                <p>
                    Flows allow you to create interactive experiences within WhatsApp.
                </p>
            </field>
        </record>
    </data>
</odoo>
