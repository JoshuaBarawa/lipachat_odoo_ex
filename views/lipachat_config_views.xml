<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Configuration Form View -->
        <record id="view_lipachat_config_form" model="ir.ui.view">
            <field name="name">lipachat.config.form</field>
            <field name="model">lipachat.config</field>
            <field name="arch" type="xml">
                <form string="LipaChat Configuration">
                    <header>
                        <!-- Removed attrs, so button always visible -->
                        <button name="test_api_connection" string="Test Connection" type="object" class="btn-primary"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Configuration Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="api_key" password="True" placeholder="Enter your API key from https://app.lipachat.com"/>
                                <field name="api_base_url"/>
                                <field name="default_from_number" placeholder="e.g., 254110090747"/>
                            </group>
                            <group>
                                <field name="active"/>
                                <field name="test_connection" invisible="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="API Information">
                                <group>
                                    <p>
                                        <strong>Getting Started:</strong><br/>
                                        1. Create an account at <a href="https://app.lipachat.com/auth/signup" target="_blank">https://app.lipachat.com/auth/signup</a><br/>
                                        2. Get your API key from the dashboard<br/>
                                        3. Enter your API key above and test the connection<br/>
                                        4. Configure your default WhatsApp Business number<br/>
                                        5. Start sending WhatsApp messages from contacts and other modules
                                    </p>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Configuration Tree View -->
        <record id="view_lipachat_config_tree" model="ir.ui.view">
            <field name="name">lipachat.config.tree</field>
            <field name="model">lipachat.config</field>
            <field name="arch" type="xml">
                <tree string="LipaChat Configurations">
                    <field name="name"/>
                    <field name="default_from_number"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <!-- Configuration Action -->
        <record id="action_lipachat_config" model="ir.actions.act_window">
            <field name="name">LipaChat Configuration</field>
            <field name="res_model">lipachat.config</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Configure your LipaChat WhatsApp Gateway settings
                </p>
                <p>
                    Set up your API key and default settings to start sending WhatsApp messages.
                </p>
            </field>
        </record>
    </data>
</odoo>
